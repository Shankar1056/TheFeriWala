<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_50">



                   <ImageView
                       android:id="@+id/prodImage"
                       android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:scaleType="fitXY"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_0.5"
                        android:layout_marginBottom="@dimen/margin_3"
                        android:layout_marginTop="@dimen/margin_3"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            fontPath="@string/medium_font"
                            tools:ignore="MissingPrefix"
                            android:textColor="@color/text_app_blue"
                            android:textSize="@dimen/margin_15"
                             />

                        <TextView
                            android:id="@+id/productdetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_10"
                            android:text=""
                            fontPath="@string/regular_font"
                            tools:ignore="MissingPrefix"
                            android:textColor="@color/text_app_black"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/text_10"
                            android:textSize="@dimen/text_13"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_40"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@mipmap/black_rup"/>
                                <TextView
                                    android:id="@+id/amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    fontPath="@string/bold_font"
                                    tools:ignore="MissingPrefix"
                                    android:textColor="@color/text_app_blue"
                                    android:textSize="@dimen/margin_14"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center|right"
                                android:layout_marginRight="@dimen/text_10"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/plusminuslayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:gravity="center|right"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/plusbutton"
                                            android:layout_width="@dimen/margin_23"
                                            android:layout_height="@dimen/margin_23"
                                            android:background="@mipmap/plus_icon"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="@dimen/margin_40"
                                        android:layout_height="@dimen/margin_23"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            fontPath="@string/medium_font"
                                            tools:ignore="MissingPrefix"
                                            android:textColor="@color/text_app_blue"
                                            android:textSize="@dimen/text_18"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/minusbutton"
                                            android:layout_width="@dimen/margin_25"
                                            android:layout_height="@dimen/margin_25"
                                            android:background="@mipmap/minus_icon"/>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_0.5"
                            android:layout_marginBottom="@dimen/margin_3"
                            android:layout_marginTop="@dimen/margin_3"
                            android:background="@color/background"/>
                        <TextView
                            android:id="@+id/specification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            fontPath="@string/medium_font"
                            tools:ignore="MissingPrefix"
                            android:text="Description"
                            android:textColor="@color/prod_name_text_color"
                            android:layout_marginTop="@dimen/margin_10"/>
                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_13"
                            fontPath="@string/regular_font"
                            tools:ignore="MissingPrefix"
                            android:textColor="@color/text_app_black"
                            android:text=""/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/addtocart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/addtocarttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gotocart"
                    android:textSize="@dimen/text_17"
                    android:textStyle="normal"
                    fontPath="@string/medium_font"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/text_app_black"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:drawablePadding="@dimen/margin_5"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>